{
  "extends": "next/core-web-vitals",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "projects": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "next"],
  "rules": {
    // "no-restricted-properties":[2,{
    //   "object":["window"]["location"],
    //   "property":"assign",
    //   "message":"Use useRouter instead"
    // }],
    "no-constant-binary-expression": ["error"],
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "@typecript-eslint/strict-boolean-expressions": ["error"],
    "@typecript-eslint/no-unnecessary-condition": "error",
    "@typecript-eslint/np-floating-promises": ["error"],
    "@typecript-eslint/no-meaningless-void-operator": ["error"],
    "@typecript-eslint/restrict-template-expressions": ["error"]
  }
}
